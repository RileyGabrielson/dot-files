{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Execute LazyGit",
            "type": "process",
            "command": "lazygit",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "close": true,
                "clear": true
            },
            "problemMatcher": [],
            "hide": true
        },
        {
            "label": "Focus Editor",
            "type": "shell",
            "command": "${command:workbench.action.focusActiveEditorGroup}",
            "hide": true,
        },
        {
            "label": "LazyGit",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Execute LazyGit",
                "Focus Editor"
            ],
        }
    ]
}