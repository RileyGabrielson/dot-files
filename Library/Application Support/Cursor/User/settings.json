{
  "[javascript]": { "editor.defaultFormatter": "biomejs.biome" },
  "[json]": { "editor.defaultFormatter": "biomejs.biome" },
  "[jsonc]": { "editor.defaultFormatter": "biomejs.biome" },
  "[typescript]": { "editor.defaultFormatter": "biomejs.biome" },
  "[typescriptreact]": { "editor.defaultFormatter": "biomejs.biome" },
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.importModuleSpecifierEnding": "js",
  "biome.enabled": true,
  "biome.suggestInstallingGlobally": false,

  "breadcrumbs.enabled": false,
  "breadcrumbs.filePath": "last",

  "cSpell.enabledFileTypes": { "*": false },
  "cSpell.userWords": [ "Polydoom", "Reise", "Trist" ],

  "cursor.cpp.enablePartialAccepts": true,

  "editor.codeActionsOnSave": { "source.organizeImports.biome": "explicit" },
  "editor.cursorSurroundingLines": 5,
  "editor.fontSize": 13,
  "editor.formatOnSave": true,
  "editor.glyphMargin": false,
  "editor.lineNumbers": "relative",
  "editor.overviewRulerBorder": false,
  "editor.peekWidgetDefaultFocus": "tree",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.stickyScroll.enabled": false,
  "editor.stickyScroll.scrollWithEditor": false,

  "explorer.openEditors.visible": 1,

  "extensions.experimental.affinity": { "asvetliakov.vscode-neovim": 1 },

  "find-it-faster.advanced.disableStartupChecks": false,
  "find-it-faster.advanced.useEditorSelectionAsQuery": false,
  "find-it-faster.findFiles.previewWindowConfig": "top,50%",
  "find-it-faster.general.batTheme": "gruvbox-dark",
  "find-it-faster.general.showMaximizedTerminal": true,

  "git.terminalGitEditor": true,
  "gitlens.codeLens.enabled": false,
  "gitlens.views.scm.grouped.views": { 
    "commits": true,
    "branches": true,
    "remotes": true,
    "stashes": true,
    "tags": true,
    "worktrees": true,
    "contributors": true,
    "fileHistory": false,
    "repositories": true,
    "searchAndCompare": true,
    "launchpad": false 
  },

  "godotTools.editorPath.godot4": "~/Desktop/Godot.app/Contents/MacOS/Godot",
  "godotTools.lsp.serverPort": 6005,

  "javascript.preferences.importModuleSpecifier": "non-relative",

  "oneDarkPro.bold": false,
  "oneDarkPro.vivid": false,

  "terminal.explorerKind": "integrated",
  "terminal.integrated.confirmOnKill": "never",
  "terminal.integrated.customGlyphs": true,
  "terminal.integrated.defaultLocation": "editor",
  "terminal.integrated.enableImages": true,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeightBold": "bold",
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.tabs.enabled": false,
  "terminal.integrated.tabs.hideCondition": "singleTerminal",
  "terminal.integrated.tabs.showActions": "never",
  "terminal.integrated.tabs.showActiveTerminal": "never",

  "window.title": "${activeEditorShort}",
  "window.titleSeparator": " .. ",

  "workbench.activityBar.orientation": "vertical",
  "workbench.colorCustomizations": {},
  "workbench.editor.autoLockGroups": { "terminalEditor": false },
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromCodeNavigation": true,
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.editor.showTabs": "single",
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.layoutControl.enabled": false,
  "workbench.navigationControl.enabled": false,
  "workbench.panel.opensMaximized": "always",
  "workbench.panel.showLabels": false,
  "workbench.startupEditor": "terminal",
  "workbench.tree.enableStickyScroll": false,

  "zenMode.centerLayout": false,
  "zenMode.fullScreen": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.restore": false,
  "zenMode.showTabs": "none",
  "zenMode.silentNotifications": false,
}
